<%
  # Calcul du montant total hors options
  main_categories = ['raccordement', 'conduit', 'liaison', 'finition']
  total_main = main_categories.sum { |cat| @grouped_kits[cat].sum { |kit| kit['price'].to_f } }

  # Calcul du montant total des options
  total_options = @grouped_kits['option'].sum { |kit| kit['price'].to_f }

  # Total général
  total_general = total_main + total_options
%>

<div class="min-h-screen bg-gray-50">
  <!-- Header avec logo Cogeli fictif -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="h-10 w-10 bg-gray-800 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">C</span>
          </div>
          <h1 class="text-2xl font-bold text-gray-900">Configuration Cogeli</h1>
        </div>
        <div class="text-sm text-gray-500">
          Session: <%= @current_session.session_token.first(8) %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

      <!-- Colonne principale - Kits recommandés -->
      <div class="lg:col-span-2 space-y-6">

        <!-- Récapitulatif des réponses -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Configuration sélectionnée
          </h2>
          <div class="space-y-3">
            <% @current_session.user_responses.includes(:question).each do |response| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-b-0">
                <span class="text-sm font-medium text-gray-700"><%= response.question.title %></span>
                <span class="text-sm text-gray-900 bg-gray-50 px-2 py-1 rounded"><%= response.answer %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Kits principaux -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            Kits recommandés
          </h2>

          <% ['raccordement', 'conduit', 'liaison', 'finition'].each do |category| %>
            <% if @grouped_kits[category].any? %>
              <div class="mb-6">
                <h3 class="text-lg font-medium text-gray-800 mb-3 uppercase tracking-wide border-b border-gray-200 pb-2">
                  <%= category.pluralize %>
                </h3>
                <div class="space-y-3">
                  <% @grouped_kits[category].each do |kit| %>
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 hover:bg-gray-100 transition-colors">
                      <div class="flex justify-between items-start">
                        <div class="flex-1">
                          <h4 class="font-semibold text-gray-900 text-base mb-1">
                            <span class="text-gray-600 text-sm font-mono"><%= kit['code'] %></span>
                          </h4>
                          <p class="text-gray-700 mt-1"><%= kit['name'] %></p>
                        </div>
                        <div class="text-right ml-4 flex flex-col items-end space-y-2">
                          <span class="text-lg font-bold text-gray-900"><%= number_to_currency(kit['price'], unit: '', precision: 2) %> €</span>
                          <button onclick="copyToClipboard('<%= kit['code'] %>')"
                                  class="copy-btn inline-flex items-center px-3 py-2 text-sm bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors shadow-sm"
                                  title="Copier le code">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                            </svg>
                            Copier
                          </button>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- Options disponibles -->
        <% if @grouped_kits['option'].any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
              </svg>
              Options disponibles
            </h2>
            <div class="space-y-3">
              <% @grouped_kits['option'].each do |kit| %>
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 hover:bg-blue-100 transition-colors">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 text-base mb-1">
                        <span class="text-blue-600 text-sm font-mono"><%= kit['code'] %></span>
                      </h4>
                      <p class="text-gray-700 mt-1"><%= kit['name'] %></p>
                      <span class="inline-block mt-2 px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                        Option
                      </span>
                    </div>
                    <div class="text-right ml-4 flex flex-col items-end space-y-2">
                      <span class="text-lg font-bold text-gray-900"><%= number_to_currency(kit['price'], unit: '', precision: 2) %> €</span>
                      <button onclick="copyToClipboard('<%= kit['code'] %>')"
                              class="copy-btn inline-flex items-center px-3 py-2 text-sm bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors shadow-sm"
                              title="Copier le code">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Copier
                      </button>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar - Résumé financier -->
      <div class="lg:col-span-1">
        <div class="sticky top-8 space-y-6">

          <!-- Résumé des coûts -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              Résumé des coûts
            </h3>

            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-sm text-gray-600">Kits principaux</span>
                <span class="font-semibold text-gray-900"><%= number_to_currency(total_main, unit: '', precision: 2) %> €</span>
              </div>

              <% if total_options > 0 %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-sm text-gray-600">Options</span>
                  <span class="font-semibold text-gray-900"><%= number_to_currency(total_options, unit: '', precision: 2) %> €</span>
                </div>

                <div class="flex justify-between items-center py-3 bg-gray-50 px-3 rounded-lg">
                  <span class="font-semibold text-gray-900">Total général</span>
                  <span class="text-xl font-bold text-gray-900"><%= number_to_currency(total_general, unit: '', precision: 2) %> €</span>
                </div>
              <% else %>
                <div class="flex justify-between items-center py-3 bg-gray-50 px-3 rounded-lg">
                  <span class="font-semibold text-gray-900">Total</span>
                  <span class="text-xl font-bold text-gray-900"><%= number_to_currency(total_main, unit: '', precision: 2) %> €</span>
                </div>
              <% end %>
            </div>

            <div class="mt-4 text-xs text-gray-500">
              Prix TTC indicatifs
            </div>
          </div>

          <!-- Actions -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
            <div class="space-y-3">
              <a href="<%= root_path %>"
                 class="w-full bg-gray-800 hover:bg-gray-900 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Nouvelle configuration
              </a>

              <button class="w-full bg-white hover:bg-gray-50 text-gray-700 font-medium py-3 px-4 rounded-lg border border-gray-300 transition-colors flex items-center justify-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Télécharger PDF
              </button>

              <button class="w-full bg-white hover:bg-gray-50 text-gray-700 font-medium py-3 px-4 rounded-lg border border-gray-300 transition-colors flex items-center justify-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Envoyer par email
              </button>
            </div>
          </div>

          <!-- Info contact -->
          <div class="bg-gray-800 rounded-xl p-6 text-white">
            <h3 class="text-lg font-semibold mb-4">Besoin d'aide ?</h3>
            <p class="text-gray-300 text-sm mb-4">
              Nos experts Cogeli sont là pour vous accompagner dans votre projet.
            </p>
            <button class="w-full bg-white text-gray-800 font-medium py-2 px-4 rounded-lg hover:bg-gray-100 transition-colors">
              Contacter un expert
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Fonction pour copier le code du kit dans le presse-papiers
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      // Trouver le bouton qui a été cliqué
      const allButtons = document.querySelectorAll('.copy-btn');
      allButtons.forEach(btn => {
        if (btn.onclick && btn.onclick.toString().includes(text)) {
          // Feedback visuel temporaire
          const originalContent = btn.innerHTML;
          btn.innerHTML = '<svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Copié !';
          btn.classList.remove('bg-blue-500', 'hover:bg-blue-600');
          btn.classList.add('bg-green-500', 'hover:bg-green-600');

          setTimeout(() => {
            btn.innerHTML = originalContent;
            btn.classList.remove('bg-green-500', 'hover:bg-green-600');
            btn.classList.add('bg-blue-500', 'hover:bg-blue-600');
          }, 1500);
        }
      });

      // Toast notification
      showToast('Code ' + text + ' copié dans le presse-papiers !');
    }, function(err) {
      console.error('Erreur lors de la copie: ', err);
      showToast('Erreur lors de la copie', 'error');
    });
  }

  // Fonction pour afficher un toast
  function showToast(message, type = 'success') {
    // Créer l'élément toast
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300 transform translate-x-full ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    toast.textContent = message;

    // Ajouter au DOM
    document.body.appendChild(toast);

    // Animation d'entrée
    setTimeout(() => {
      toast.classList.remove('translate-x-full');
    }, 100);

    // Supprimer après 3 secondes
    setTimeout(() => {
      toast.classList.add('translate-x-full');
      setTimeout(() => {
        document.body.removeChild(toast);
      }, 300);
    }, 3000);
  }
</script>