          <!-- Header avec ic√¥ne -->
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 bg-white bg-opacity-30 rounded-xl flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-3xl font-black mb-2 text-white drop-shadow-lg">
                <%= questionnaire.name %>
              </h3>
              <span class="text-white text-lg font-semibold drop-shadow-md">üîß Configuration produits</span>
            </div>
          </div>

          <!-- Description -->
          <p class="text-xl text-white mb-6 leading-relaxed font-medium drop-shadow-md">
            <%= questionnaire.description %>
          </p>

          <!-- Features list -->
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
